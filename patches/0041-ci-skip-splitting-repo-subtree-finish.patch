-	while (*p) {
-        const char *end = strchrnul(p, ',');
-		if (end-p == length && strncmp(param, p, end-p) == 0) {
-			return true ^ context->is_kept;
-		}
-		p = *end ? end+1 : end;
-	}
-
-	return false ^ context->is_kept;
-}
