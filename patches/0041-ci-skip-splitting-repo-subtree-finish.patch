-static const char *
-remove_querystring(struct ws *ws, const char *uri)
-{
-	if (uri == NULL) {
-		return NULL;
-	}
-
-	char *query_string = strchr(uri, '?');
-	if (query_string == NULL) {
-		return uri;
-	}
-
-	return truncate_querystring(ws, uri, query_string);
-}
